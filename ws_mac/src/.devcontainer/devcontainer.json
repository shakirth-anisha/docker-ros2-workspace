{
  "name": "ROS 2 Development Container",
  "remoteUser": "YOUR_USERNAME",

  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "YOUR_USERNAME"
    }
  },

  "workspaceFolder": "/home/ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/src,type=bind",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros"
      ]
    }
  },

  "containerEnv": {
    "ROS_DOMAIN_ID": "42",
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
    "DISPLAY": "host.docker.internal:0"
  },

  "runArgs": [
    "--net=host"
  ],

  "mounts": [
    "source=${localWorkspaceFolder}/../cache/humble/build,target=/home/ws/build,type=bind",
    "source=${localWorkspaceFolder}/../cache/humble/install,target=/home/ws/install,type=bind",
    "source=${localWorkspaceFolder}/../cache/humble/log,target=/home/ws/log,type=bind"
  ],

  "postCreateCommand": "if [ ! -f /etc/ros/rosdep/sources.list.d/20-default.list ]; then sudo rosdep init; fi && rosdep update || true"
}